.wrapper {
    background: #efeff4;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding-bottom: 120rpx;
}
.slide-image {
  width: 100vw;
  height: 200rpx;
}
swiper {
  height: 200rpx;
}
.img-cont {
  margin-top: 20rpx;
  background-color: #FFF;
}
.img-cont:after{
  display:block;
  clear:both;
  content:"";
  visibility:hidden;
  height:0
}
.names {
  float: left;
  width: 550rpx;
  font-size: 30rpx;
  text-align: left;
}
.names text {
  display: block;
  margin-right: 20rpx;
}
.bg{
  display: block;
  width: 100%;
  height: 200rpx;
}
 .img {
  float: left;
  margin-right: 10rpx;
  margin-left: 10rpx;
  width: 160rpx;
  height: 160rpx;
  background-color: #fff;
} 
.content-know {
  position: relative;
  margin-top: 40rpx;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}
.content-know text{
  font-size: 40rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #000;
  padding-left: 40rpx;
}
.content-know image{
  position: absolute;
  right: 25rpx;
  top: 25rpx;
  width: 25rpx;
  height: 50rpx;
}
.content-med {
  position: relative;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.content-med text{
  font-size: 40rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #000;
  padding-left: 40rpx;
}
.content-med image{
  position: absolute;
  right: 25rpx;
  top: 25rpx;
  width: 25rpx;
  height: 50rpx;
}
.content-movie image{
  position: absolute;
  right: 25rpx;
  top: 25rpx;
  width: 25rpx;
  height: 50rpx;
}
.info {
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
  font-size: 30rpx;
}
.info text{
  display: block;
  padding: 20rpx;
}
.foot{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #ccc;
  text-align: center;
  line-height: 100rpx;
}
.hovers{
  background-color: #fff;
}
.content-movie {
  position: relative;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.content-movie text{
  font-size: 40rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #000;
  padding-left: 40rpx;
}
.title{
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  color:#ccc;
}
.cont{
  font-size: 30rpx;
  color:#000;
  padding: 0 20rpx;
}
.time{
  height: 40rpx;
  font-size: 20rpx;
  line-height: 40rpx;
  color:#ccc;
}
.fun{
  margin-top: 20rpx;
  background-color: #fff;
}
.step{
  display: inline-block;
  margin: 1vw 1vw 0 1vw;
}
.image{
  display: block;
  width: 22.3vw;
  height: 23vw;
  border: 1rpx solid #efeff4;
}
.step text{
  display: block;
  margin-top: 10rpx;
  width: 22.3vw;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  text-align: center;
}