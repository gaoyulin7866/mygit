/* pages/options/option.wxss */
.page {
  background: #efeff4;
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
  padding: 20rpx;
}
.title{
  display: block;
  margin-top: 30rpx;
  height: 50rpx;
  font-size: 38rpx;
  line-height: 50rpx;
  text-align: center;
}
.cont {
  margin-top: 40rpx;
  background-color: #fff;
  border-radius: 15rpx;
  box-sizing: border-box;
  padding: 30rpx;
   height: calc(100vh - 600rpx); 
  font-size: 30rpx;
  text-indent: 60rpx;
}
.img {
  width: 60%;
  height: 350rpx;
  margin-left: 20%;
  margin-top: 40rpx;
}